{
    "manifest_version": 3,
    "name": "Spongify-former-twitter",
    "version": "1.0",
    "description": "The enabler of the ultimate twitter experience.",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "img/icon.png"
            ],
            "matches": [
                "*://*.twitter.com/*",
                "*://*.x.com/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.twitter.com/*",
                "*://*.x.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}